{
  "compilerOptions": {
    "outDir": "out/",
    "lib": [ "es2016", "dom" ],
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
  },
  "include": [
    "src/",
    "test/",
  ],
}
